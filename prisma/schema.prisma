datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String
  mobile      String
  password    String
  expenses    Expense[]
}

model Expense {
  id            Int       @id @default(autoincrement())
  amount        Float
  method        String   
  userId        Int
  user          User      @relation(fields: [userId], references: [id])
  splitDetails  Json      
}
